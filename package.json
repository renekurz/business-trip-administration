{
  "name": "business-trip-administration",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4",
    "@sap/xssec": "^4"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.13.0",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": ">=8"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-employee": "cds watch --open employee/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-backoffice-employee": "cds watch --open backoffice-employee/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-administrator": "cds watch --open administrator/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-businesstrip": "cds watch --open businesstrip/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "sapux": [
    "app/employee",
    "app/backoffice-employee",
    "app/administrator",
    "app/businesstrip"
  ],
  "cds": {
    "requires": {
      "[development]": {
        "auth": {
          "kind": "mocked"
        },
        "users": {
          "employee": {
            "roles": [
              "Employee"
            ]
          },
          "backoffice-employee": {
            "roles": [
              "BackofficeEmployee"
            ]
          },
          "admin": {
            "roles": [
              "Admin"
            ]
          }
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "destinations": true,
      "html5-runtime": true,
      "workzone": true
    }
  }
}
